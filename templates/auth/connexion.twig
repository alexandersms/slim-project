{% extends 'base.twig' %}

{% block title %}Page de connexion
{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    <form>
        <fieldset>
            <div class="form-group">
                {{ formValidator.generateInputText('email', 'email','Adresse email') | raw('html')}}
            </div>
            <div class="form-group">
                {{formValidator.generateInputText('password', 'password','Mot de passe') | raw('html')}}
            </div>
            <button class="btn btn-primary" type="submit">Se connecter</button>

        </fieldset>
    </form>


{% endblock %}
